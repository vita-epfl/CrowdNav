[env]
time_limit = 25
time_step = 0.25
val_size = 100
test_size = 500
randomize_attributes = false


[reward]
success_reward = 1
collision_penalty = -0.25
out_boundary_penalty = -0.25
discomfort_dist = 0.2
discomfort_dist_front = 0.25
discomfort_penalty_factor = 0.5


[sim]
train_val_sim = square_crossing
test_sim = square_crossing
square_width = 15
circle_radius = 4
human_num = 5
static_obstacle_num = 10
min_obst_offset = 1
obstacle_max_radius = 2.5
obstacle_min_radius = 0.5
boundary = 20
uncertainty_growth = logarithmic


[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates
FOV = 2.0
unseen_mode = slowing_down


[robot]
visible = false
policy = none
radius = 0.3
v_pref = 1
sensor = RGB
FOV = 0.7
unseen_mode = ground_truth
